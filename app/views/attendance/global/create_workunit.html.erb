<div class="hero-unit font-gray hero-setting">
	<div class="wrap-small clearfix">
	
<div class="file-upload-place-left">	
	<div class="notice"><%= flash[:notice] %></div>
	<%= form_tag  do %>
		<%= label_tag :nr, "工作台号：" %>
		<%= text_field :unit, :nr %>
		<br />
		<%= submit_tag "新建", :name=>nil %>
		<%= submit_tag "查询", :name=>"search" %>
	<% end %>
    <input id="uploadWorkunitsFile" class="uploadWorkunitsFile" type="file" name="files[]" data-url="../attendance/upload_workunit" >
    		<div class="abstractblock" id="uploadWorkunitsFile-preview" style="display:none;">	</div>

</div>

    <div class="file-upload-place-right" >
		<table class="table table-bordered table-striped globle-table">
        		<tr>
        			<th>工作台号</th>
        			<th>状态</th>
        			<th>当前员工数量</th>
        			<th>&nbsp;</th>
        		</tr>
        		<% @units.each do |unit| %>
        		<tr>
        			<td><%= unit.nr %></td>
        			<td><%= unit.state %></td>
        			<td><%= unit.staffs.count %></td>
        			<td><%= button_tag( "删除", :type=>"button", :onclick=>"delete_unit(this,'#{unit.nr}',{:class=>"btn-danger"});" )%></td>
        		</tr>
        		<% end %>
        	</table>
        	<p>共计：<span><%= @units.size %></span> 个</p>
    </div>
    
	</div>
</div>


<script src="/assets/jquery.file.upload/jquery.fileupload.js" type="text/javascript"></script>
<script type="text/javascript">
///////////////////////////////////////////////////////////////          upload
$(function(){
	initial_uploader("#uploadWorkunitsFile");
})

function delete_unit(ele, unitNr){
	var r=confirm("确认删除"+unitNr);
	if (r)
		$.post("../attendance/delete_workunit",{
			unitNr : unitNr
		},function(data){
			if (data.flag)
				$(ele).parents("tr").remove();
			MessageBox(data.msg);
		},"json")
}
///////////////////////////////////////////////////////////////          above for  upload  
</script>